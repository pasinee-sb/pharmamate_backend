{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "maxLength": 25
      },
      "drugName": {
        "type": "string",
        "pattern": "^[a-z]+$"
      },
      "status": {
        "type": "string",
        "enum": ["active", "inactive"]
      },
      "startDate": {
        "type": "string",
        "format": "date"
      },
      "stopDate": {
        "type": ["string", "null"],
        "format": "date"
      }
    },
    "required": ["username", "drugName", "status", "startDate"],
    "additionalProperties": false
  }
  